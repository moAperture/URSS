                      <apex:column value="{!row.relatedListRow[col]}"> 
                        <apex:facet name="header">{!userChoice.ucRelatedListOptions.columnHeaders[col]}</apex:facet>
                      </apex:column>
                    </apex:repeat> 
                  </apex:pageBlockTable>
                </apex:outputPanel>
                <!-- End Runtime Prompts Related Lists -->

