                    html-placeholder="{!userChoice.textFieldListWrapper.textFieldList[0].preformatting}"
                    style="width: 350px" />
                    <br />
                    <apex:outputText styleClass="preformatting-error-message-{!userChoice.userChoiceNum}" 
