                  </apex:outputPanel>
                </apex:outputPanel>
                <!-- End UserChoiceTextFields -->

                <!-- InputDateWrapper -->
                <apex:outputPanel rendered="{!userChoice.choiceType == UC_INPUT_DATE}">
